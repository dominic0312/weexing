<%= stylesheet_link_tag "pagenate.css" %>
<%= stylesheet_link_tag "shop.css" %>
<%= stylesheet_link_tag "jquery-ui-1.10.4.custom.css" %>
<%= javascript_include_tag "jquery-191.js" %>
<%= javascript_include_tag "jquery-ui-1.10.4.custom.js" %>

<script>
	$(document).ready(function() {
		$("#tempdialog").dialog({
			autoOpen : false,
			modal : true,
			height : 600,
			width : 680,
			maxHeight : 900,
			maxWidth : 680,
			resizable : false,
			title : '请选择一个模板',
			closeText : "关闭"
		});

		logoDialog = $("#logo-form").dialog({
			autoOpen : false,
			height : 500,
			width : 550,
			modal : true,
			title : '上传一个LOGO',
			resizable : false,
			closeText : "关闭"

		});

		cardDialog = $("#card-form").dialog({
			autoOpen : false,
			height : 600,
			width : 680,
			modal : true,
			title : '选择您的卡片样式',
			resizable : false,
			closeText : "关闭"

		});

		infoDialog = $("#url-form").dialog({
			autoOpen : false,
			height : 600,
			width : 680,
			modal : true,
			title : '确认您的系统参数',
			resizable : false,
			closeText : "关闭"

		});

	});

	function setTemplate(id) {
		url = "/usertemplates/display?shopid=" + id;
		$("#tempdialog").html('<iframe id="ifrm" width="100%" height="100%" marginWidth="0" marginHeight="0" frameBorder="0" scrolling="no" />').dialog("open");
		$("#ifrm").attr("src", url);
		$('#tempdialog').css('overflow', 'hidden');
		return false;

	}

	function setuplogo(id) {
		url = "/shops/uploadlogo/" + id;
		$("#logo-form").html('<iframe id="ifrmlogo" width="100%" height="100%" marginWidth="0" marginHeight="0" frameBorder="0" scrolling="no" />').dialog("open");
		$("#ifrmlogo").attr("src", url);
		$('#logo-form').css('overflow', 'hidden');
		return false;
	}

	function setupcard(id) {
		url = "/membercards/display?shopid=" + id;
		$("#card-form").html('<iframe id="ifrmcard" width="100%" height="100%" marginWidth="0" marginHeight="0" frameBorder="0" scrolling="no" />').dialog("open");
		$("#ifrmcard").attr("src", url);
		$('#card-form').css('overflow', 'hidden');
		return false;
	}

	function setupurl(id) {
		url = "/shops/sysinfo/" + id;
		$("#url-form").html('<iframe id="ifrmurl" width="100%" height="100%" marginWidth="0" marginHeight="0" frameBorder="0" scrolling="no" />').dialog("open");
		$("#ifrmurl").attr("src", url);
		$('#url-form').css('overflow', 'hidden');
		return false;
	}
</script>
<div id="shops" class="shopsborder">
	<div id="cont">
		<div id="wrapper" class="shopswrapper">

			<% @shops.each do |shop| %>
			<li class="shopgrid">
				<div class="accountname">
					<%= shop.name%>
				</div>

				<div class="logoset">

					<a class="setupbutton logobutton"  onclick="return setuplogo(<%= shop.id%>)">LOGO上传</a>

				</div>
				<div class="templateset">
					<a class="setupbutton templatebutton" onclick="return setTemplate(<%= shop.id%>)">模板样式</a>
				</div>

				<div class="cardset">
					<a class="setupbutton logobutton" onclick="return setupcard(<%= shop.id%>)">卡片样式</a>
				</div>

				<div class="sysinfo">
					<a class="setupbutton templatebutton" onclick="setupurl(<%= shop.id%>)">系统信息</a>
				</div>
			</li>
			<% end %>
		</div>
		<div class="flickr_pagination shop_pag">
			<%= ajax_will_paginate @shops %>
		</div>

	</div>
	<div id="tempdialog"></div>

	<div id="logo-form">

	</div>
	<div id="card-form">

	</div>

	<div id="url-form">

	</div>
</div>

