<!-- MultiDialog files (needed) -->
<script type="text/javascript">
	$(function() {
		$("a.add-type").MultiDialog({
			types : {
				config : {
					customPath : {
						test : function(href) {
							// search for syntaxhighlighter in URL
							return href.match(/syntaxhighlighter/i);
						},
						template : '<iframe width="100%" height="200%" src="{url}" frameborder="0"></iframe>'
					}
				}
			},
			openCustom : function(data) {
				if (data.type = "customPath") {
					this._parseHtml(data, "customPath", "url");
					data.width = 750;
					data.height = 640;
					//data.title = "请选择模板";
					this._open(data);
				} else {
					// backfall
					window.open(data.href, '_newtab');
				}
			}
		});

		$(function() {

			$("a.lightbox").MultiDialog({
				gallery : {
					enabled : true,
				},
				dialog : {
					buttons : {}
				}
			});
		});

	}); 
</script>

