<h1>店铺列表</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th>Phone</th>
		<th>Agency</th>
		<th>Cardtemplate</th>
		<th>Pagetemplate</th>
		<th>Logo</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @shops.each do |shop| %>
	<tr>
		<td><%= shop.name %></td>
		<td><%= shop.address %></td>
		<td><%= shop.phone %></td>
		<td><%= shop.agency %></td>
		<td><%= link_to "Edit", {controller: "shops", action: "edit"}, id: @shop %></td>
		<td><%= link_to 'Destroy', controller: "shops", action:"destroy", id:@shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>
<%= will_paginate @shops,:inner_window=>3,:outer_window=>2 %>
<br />

<%= link_to 'New Shop', controller: "shops", action: "new" %>
