<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>COCO烘焙坊</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<%= stylesheet_link_tag "jquery.mobile.structure-1.3.2.css" %>
		<%= stylesheet_link_tag "jquery.mobile-1.3.2.css" %>
		<%= stylesheet_link_tag "jquery.mobile.theme-1.3.2.css" %>
		<script src="/assets/jquery-1.7.1.min.js"></script>
		<script src="/assets/jquery.mobile-1.3.2.js"></script>

		<script src="/assets/tempo.js" type="text/javascript"></script>
		<script></script>
		<style>
			div#card {
				width: 350px;
				margin: 10px 0;
				position: relative;
				left: 20px;
			}

			div .price {

				height: 80px;
				width: 70px;
				border: 1px dashed grey;
			}

			.content-title {
				text-align: center;
				margin-top: 10px;
			}

			.content-value {
				text-align: center;
				margin-top: 10px;
			}
			.countBubl {
				float: left;
				margin-top: -42px;
				margin-left: 35px;
				background: #FF0000;
				color: #fff;
				padding: 2px;
			}

			.ui-li-has-icon .ui-btn-inner a.ui-link-inherit, .ui-li-static.ui-li-has-icon {
				padding-left: 47px;
			}

			.ui-listview-filter {
				margin-top: 20px;
			}

			.ui-li-thumb {
				top: 21px;
			}

			ul.copy-divider {
				margin: 20px -15px 0 -15px !important;
			}

		</style>
		<script type="text/javascript">
			var params = "customer_name=dominic";
			$.ajax({
				type : "POST",
				url : "/cardguest/get_customer_info/1",
				data : params,
				dataType : "json",
				success : function(data) {
					Tempo.prepare("coupons").render(data.coupons);
					Tempo.prepare("customer_balance").render(data);
					Tempo.prepare("customer_bonus").render(data);
					Tempo.prepare("customer_level").render(data);
					Tempo.prepare("coupon_num").render(data);
				},
				error : function(data) {
					alert("error");
				}
			});

		</script>

	</head>
	<body>
		<%= render :partial => "/templates/"+@page.to_s+"/index" %>
	<body>
</html>