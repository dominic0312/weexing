<%= javascript_include_tag "jquery-191.js" %>
<%= javascript_include_tag "jquery-ujs.js" %>
<%= stylesheet_link_tag "admin.css"%>
<%= stylesheet_link_tag "pagenate.css" %>
<style>
	.newsbody {
		margin-top:50px

	}
	
	td{
		margin-right:10px;
	}
</style>
<div class="mainbody newsbody">
	<table>
		<tr>
			<th>标题</th>
			<th>类型</th>
		
		</tr>

		<% @news.each do |news| %>
		<tr>
			<td><%= news.title %></td>
			<td><%= news.doctype %></td>
			<td><%= link_to '查看', news, :target => "_blank" %></td>
			<td><%= link_to '编辑', edit_news_path(news) %></td>
			<td><%= link_to '删除', news, method: :delete, data: { confirm: '确定删除?' } %></td>
		</tr>
		<% end %>
	</table>

	<br />
	<div class="flickr_pagination page_admin">
		<%= will_paginate @news,:inner_window=>3,:outer_window=>2 %>
	</div>
	<%= link_to '新文章', new_news_path %>

</div>
